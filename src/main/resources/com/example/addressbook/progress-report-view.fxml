<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER_LEFT" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.addressbook.controller.ProgressReportController">
   <children>
      <Label text="Topic: [quiz topic]">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <LineChart prefHeight="275.0" prefWidth="353.0">
              <xAxis>
                <CategoryAxis label="Attempt number" side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis autoRanging="false" label="Score (%)" side="LEFT" />
              </yAxis>
            </LineChart>
            <VBox>
               <children>
                  <Label text="Comments">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextArea editable="false" prefHeight="248.0" prefWidth="251.0" wrapText="true">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextArea>
               </children>
            </VBox>
         </children>
      </HBox>
      <Button mnemonicParsing="false" text="Back to results" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
