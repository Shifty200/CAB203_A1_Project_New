<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER_LEFT" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.addressbook.controller.ProgressReportController">
   <children>
      <Label fx:id="quizTopicLabel" text="Progress Report: [quiz topic]">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <LineChart fx:id="lineChart" legendVisible="false" prefHeight="275.0" prefWidth="353.0">
              <xAxis>
                <NumberAxis fx:id="attemptNumAxis" autoRanging="false" label="Attempt number" lowerBound="1.0" minorTickVisible="false" side="BOTTOM" tickMarkVisible="false" tickUnit="1.0" upperBound="5.0" />
              </xAxis>
              <yAxis>
                <NumberAxis autoRanging="false" label="Score (%)" minorTickVisible="false" side="LEFT" tickMarkVisible="false" tickUnit="10.0" />
              </yAxis>
            </LineChart>
            <VBox>
               <children>
                  <Label text="Comments">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="commentsArea" editable="false" prefHeight="248.0" prefWidth="251.0" wrapText="true">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextArea>
               </children>
            </VBox>
         </children>
      </HBox>
      <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackButtonPressed" text="Back to results" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
