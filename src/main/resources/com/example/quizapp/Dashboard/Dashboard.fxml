<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quizapp.controller.DashboardController">
    <top>
        <HBox spacing="15" style="-fx-background-color: #2c2c2c; -fx-padding: 10;">
            <Label style="-fx-text-fill: white; -fx-font-size: 16px;" text="dashboard" />
            <Region HBox.hgrow="ALWAYS" />
            <ImageView fitHeight="30" fitWidth="30" />
            <Label style="-fx-text-fill: white;" text="User" />
            <Button fx:id="settingsButton" onAction="#settingsPressed" text="âš™" />
        </HBox>
    </top>
    <center>
        <VBox prefHeight="263.0" prefWidth="620.0" spacing="15" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 20px;" text="MY QUIZZES" />
            <HBox spacing="10">
                <Label text="Sort by:" />
                <ComboBox fx:id="topicDropdown" prefWidth="150" />
                <Label style="-fx-font-size: 16px;" text="MY PROGRESS" />
                <Button fx:id="viewProgressBtn" text="View Progress" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="20">
                <VBox fx:id="addQuizBox" alignment="CENTER" prefHeight="100" prefWidth="100" style="-fx-border-color: gray; -fx-background-color: #f5f5f5; -fx-cursor: hand;">
                    <Label style="-fx-font-size: 30;" text="+" />
                </VBox>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="BOTTOM_RIGHT">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Hyperlink fx:id="logoutLink" text="Log out" />
        </HBox>
    </bottom>

</BorderPane>
