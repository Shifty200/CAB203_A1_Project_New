<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.shape.Circle?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.quizapp.controller.DashboardController"
            stylesheets="@../css/stylesheet.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="20">
            <Label id="bolded-text" fx:id="userNameLabel"  text="User"/>
            <Circle fx:id="userIcon" radius="25"/>
            <Button id="icon-button" fx:id="settingsButton" text="âš™" onAction="#settingsPressed"/>
        </HBox>
    </top>
    <center>
        <VBox spacing="40" style="-fx-padding: 20;">
            <Label id="larger-heading" text="MY QUIZZES" />
            <VBox spacing="5" alignment="CENTER_LEFT">
                <Label text="Sort by:" />
                <HBox spacing="20">
                    <ComboBox fx:id="topicDropdown" value="All Topics"
                          prefWidth="150"
                          style="-fx-cursor: hand;"
                          onAction="#handleComboBoxSelection" />
                    <Button id="icon-button" fx:id="deleteTopicButton" text="ðŸ—‘" onAction="#onDeleteTopicPressed" translateY="-5"/>
                </HBox>
            </VBox>
            <HBox spacing="20" alignment="CENTER_LEFT">
                <ScrollPane prefHeight="200" fitToHeight="true" >
                    <HBox fx:id="quizHistoryBox"
                          spacing="20"
                          style="-fx-padding: 10;">
                    </HBox>
                </ScrollPane>
            </HBox>
            <HBox spacing="30" alignment="CENTER_LEFT">
                <Label id="larger-heading" text="MY PROGRESS" />
                <Button fx:id="viewProgressBtn" text="âž¡" style="-fx-font-size: 24; -fx-padding: 5; -fx-pref-width: 150"/>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="BOTTOM_RIGHT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Hyperlink id="logout-link" fx:id="logoutLink" text="Log out âˆ" />
        </HBox>
    </bottom>

</BorderPane>

