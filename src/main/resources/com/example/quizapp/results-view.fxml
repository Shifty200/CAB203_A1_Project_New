<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox alignment="TOP_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.quizapp.controller.ResultsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label>Your Results</Label>
    <VBox spacing="20">
        <Label>Overview</Label>
        <HBox alignment="CENTER_RIGHT">
            <Button fx:id="retakeQuizButton">Retake quiz</Button>
        </HBox>
        <HBox alignment="CENTER" spacing="20">
            <Label fx:id="currentResult"></Label>
            <ProgressIndicator fx:id="resultGraph"></ProgressIndicator>
        </HBox>
        <HBox alignment="CENTER_RIGHT">
            <Button fx:id="progressReportButton" BorderPane.alignment="BOTTOM_RIGHT">View progress</Button>
        </HBox>
        <Label>Question Breakdown</Label>
        <VBox fx:id="questions" spacing="10"></VBox>
        <HBox alignment="CENTER_RIGHT" spacing="20">
            <Button fx:id="questionDetailsButton" onAction="#toQuestionDetails">View details</Button>
            <Button fx:id="exitButton">Exit to dashboard</Button>
        </HBox>
    </VBox>
</VBox>