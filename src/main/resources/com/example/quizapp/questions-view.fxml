<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quizapp.controller.QuestionsController">
   <children>
      <HBox alignment="CENTER" spacing="200.0">
         <children>
            <Label fx:id="quizNameLabel" text="Quiz Name">
               <font>
                  <Font size="24.0" />
               </font></Label>
            <HBox alignment="CENTER_RIGHT" spacing="25.0">
               <children>
                  <Label fx:id="questionsAnsweredTracker" text="Answered: 0/10">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Button fx:id="submitQuizButton" mnemonicParsing="false" onAction="#onSubmit" text="Submit">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding></HBox>
      <ScrollPane prefHeight="336.0">
         <content>
            <VBox fx:id="questionsContainer" alignment="CENTER" prefHeight="111.0" prefWidth="580.0" spacing="10.0" />
         </content>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </ScrollPane>
   </children>
</VBox>
